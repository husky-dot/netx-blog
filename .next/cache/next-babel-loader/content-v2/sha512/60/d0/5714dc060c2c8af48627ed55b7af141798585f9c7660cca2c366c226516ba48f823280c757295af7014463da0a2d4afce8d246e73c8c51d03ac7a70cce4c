{"ast":null,"code":"import { useState, useEffect } from \"react\";\nimport axios from \"axios\";\nexport const usePosts = () => {\n  const {\n    0: posts,\n    1: setPosts\n  } = useState([]);\n  const {\n    0: isLoading,\n    1: setIsLoading\n  } = useState(false);\n  const {\n    0: isEmpty,\n    1: setIsEmpty\n  } = useState(false);\n  useEffect(() => {\n    setIsLoading(true);\n    axios.get('/api/v1/posts').then(response => {\n      setPosts(response.data);\n      setIsLoading(false);\n\n      if (response.data.length === 0) {\n        setIsEmpty(true);\n      }\n    }).catch(() => {\n      setIsLoading(false);\n    });\n  }, []);\n  return {\n    posts,\n    setPosts,\n    isLoading,\n    isEmpty\n  };\n};","map":null,"metadata":{},"sourceType":"module"}